{
    "name": "tonis/view",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Tonis\\View is a light-weight, HHVM compatible, and dependency free view compatability layer. It does not provide its own templating system!",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "scrutinizer/ocular": "^1.1.1",
        "squizlabs/php_codesniffer": "^1.0",
        "league/plates": "^3.1",
        "twig/twig": "^1.18"
    },
    "suggest": {
        "twig/twig": "To use with the Twig engine"
    },
    "autoload": {
        "psr-4": {
            "Tonis\\View\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
